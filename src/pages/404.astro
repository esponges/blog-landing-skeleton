---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="404: Not Found">
  <div class="text-center py-24">
    <h1 class="text-5xl font-bold mb-4">404</h1>
    <p class="text-lg mb-8">Sorry, the page you are looking for does not exist.</p>
    <a href="/" class="inline-block px-6 py-2 bg-primary-500 text-white rounded hover:bg-primary-600 transition">Go Home</a>
  </div>
</BaseLayout>
